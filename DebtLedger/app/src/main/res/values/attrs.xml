<?xml version="1.0" encoding="utf-8"?>
<resources>
    <item type="id" name="status_container" />
    <item type="id" name="loading_progress_bar" />
    <item type="id" name="message_text_view" />
    <item type="id" name="action_button" />

    <declare-styleable name="LoadableRecyclerView">
        <attr name="statusContainer" format="reference" />
        <attr name="loadingProgressBar" format="reference" />
        <attr name="messageTextView" format="reference" />
        <attr name="actionButton" format="reference" />
        <attr name="loadingMessage" format="string|reference" />
        <attr name="failedToLoadMessage" format="string|reference" />
        <attr name="failedToLoadAction" format="string|reference" />
        <attr name="emptyMessage" format="string|reference" />
        <attr name="emptyAction" format="string|reference" />
    </declare-styleable>
</resources>
