# Turn rewrite engine on
Options +FollowSymlinks

#contact_group_member
RedirectMatch ^/contact_group_member/memberlist/([0-9]+)/?$ http://cs4474.heliohost.org/api/RestController.php?type=contact_group_member&view=list&id=$1
RedirectMatch ^/contact_group_member/add/([0-9]+)/([0-9]+)/?$ http://cs4474.heliohost.org/api/RestController.php?type=contact_group_member&view=add&id=$1&user=$2
RedirectMatch ^/contact_group_member/remove/([0-9]+)/([0-9]+)/?$ http://cs4474.heliohost.org/api/RestController.php?type=contact_group_member&view=remove&id=$1&user=$2

#contact_group
RedirectMatch ^/contact_group/grouplist/([0-9]+)/$ http://cs4474.heliohost.org/api/RestController.php?type=contact_group&view=groupist&user=$1
RedirectMatch ^/contact_group/group/([0-9]+)/$ http://cs4474.heliohost.org/api/RestController.php?type=contact_group&view=group&id=$1
RedirectMatch ^/contact_group/add/([^/]+)/$ http://cs4474.heliohost.org/api/RestController.php?type=contact_group&view=add&info=$1
RedirectMatch ^/contact_group/delete/([0-9]+)/$ http://cs4474.heliohost.org/api/RestController.php?type=contact_group&view=delete&id=$1

#contact_request
RedirectMatch ^/contact_request/pending/([0-9]+)/?$ http://cs4474.heliohost.org/api/RestController.php?type=contact_request&view=pending&user=$1
RedirectMatch ^/contact_request/add/([0-9]+)/([0-9]+)/?$ http://cs4474.heliohost.org/api/RestController.php?type=contact_request&view=add&user=$1&contact=$2
RedirectMatch ^/contact_request/accept/([0-9]+)/([0-9]+)/?$ http://cs4474.heliohost.org/api/RestController.php?type=contact_request&view=accept&user=$1&contact=$2
RedirectMatch ^/contact_request/deny/([0-9]+)/([0-9]+)/?$ http://cs4474.heliohost.org/api/RestController.php?type=contact_request&view=deny&user=$1&contact=$2

#contact
RedirectMatch ^/contact/id/([0-9]+)/?$ http://cs4474.heliohost.org/api/RestController.php?type=contact&view=all&id=$1
#RedirectMatch ^/contact/add/([0-9]+)/([0-9]+)/?$ http://cs4474.heliohost.org/api/RestController.php?type=contact&view=add&user=$1&contact=$2
RedirectMatch ^/contact/delete/([0-9]+)/([0-9]+)/?$ http://cs4474.heliohost.org/api/RestController.php?type=contact&view=delete&user=$1&contact=$2

#transaction
RedirectMatch ^/transaction/id/([0-9]+)/?$ http://cs4474.heliohost.org/api/RestController.php?type=transaction&view=id&id=$1
RedirectMatch ^/transaction/debtor/([0-9]+)/?$ http://cs4474.heliohost.org/api/RestController.php?type=transaction&view=debtor&id=$1
RedirectMatch ^/transaction/creditor/([0-9]+)/?$ http://cs4474.heliohost.org/api/RestController.php?type=transaction&view=creditor&id=$1
RedirectMatch ^/transaction/add/([^/]+)/?$ http://cs4474.heliohost.org/api/RestController.php?type=transaction&view=add&info=$1

#user
RedirectMatch ^/user/login/([^/]+)/([^/]+)/?$ http://cs4474.heliohost.org/api/RestController.php?type=user&view=login&email=$1&pass=$2
RedirectMatch ^/user/id/([0-9]+)/$ http://cs4474.heliohost.org/api/RestController.php?type=user&view=id&id=$1
RedirectMatch ^/user/email/([^/]+)/?$ http://cs4474.heliohost.org/api/RestController.php?type=user&view=email&email=$1
RedirectMatch ^/user/add/([^/]+)/?$ http://cs4474.heliohost.org/api/RestController.php?type=user&view=add&info=$1
RedirectMatch ^/user/update/([^/]+)/?$ http://cs4474.heliohost.org/api/RestController.php?type=user&view=update&info=$1
RedirectMatch ^/user/delete/([0-9]+)/?$ http://cs4474.heliohost.org/api/RestController.php?type=user&view=delete&id=$1